<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dotnet8MAUIStudy.Pages.LoginPage"
             Title="LoginPage">

    <VerticalStackLayout Padding="30" Spacing="20">

        <!-- ユーザーID の入力 -->
        <Label Text="ユーザーID" />
        <Entry x:Name="UserIdEntry" Placeholder="ユーザーIDを入力してください" />

        <!-- パスワードの入力 -->
        <Label Text="パスワード" />
        <Entry x:Name="PasswordEntry" Placeholder="パスワードを入力してください" IsPassword="True" />

        <!-- ログインボタン -->
        <Button Text="ログイン" Clicked="OnLoginButtonClicked" />

    </VerticalStackLayout>

</ContentPage>
